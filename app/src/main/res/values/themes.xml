<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShiftEntrance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Chart customization -->
        <item name="lineColor">@color/purple_250</item>
        <item name="circleHoleColor">@color/white</item>
        <item name="chartTextColor">@color/gray_100</item>
        <item name="fillBackground">@drawable/bg_chart_fill_light</item>
    </style>

    <style name="TextPrimary" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <style name="TextSecondary" parent="TextAppearance.AppCompat.Body1" >
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <style name="TextTertiary" parent="TextAppearance.AppCompat.Caption" />

    <style name="ThemeToolbar">
        <item name="titleTextAppearance">@style/TextToolbar</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextToolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
    </style>
</resources>